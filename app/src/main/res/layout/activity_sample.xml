<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="30dp"
        android:text="Open Messenger:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnViber"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTelegram"
        app:srcCompat="@drawable/ic_viber_logo"
        />

    <ImageView
        android:id="@+id/btnTelegram"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/btnViber"
        app:layout_constraintStart_toEndOf="@+id/btnViber"
        app:layout_constraintBottom_toBottomOf="@+id/btnViber"
        app:layout_constraintEnd_toStartOf="@+id/btnFacebook"
        app:srcCompat="@drawable/ic_telegram_logo"

        />

    <ImageView
        android:id="@+id/btnFacebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/btnViber"
        app:layout_constraintStart_toEndOf="@+id/btnTelegram"
        app:layout_constraintBottom_toBottomOf="@+id/btnViber"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_facebook_messenger_logo"

        />

    <ImageView
        android:id="@+id/btnSkype"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnViber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnWhatsapp"
        app:srcCompat="@drawable/ic_skype_logo"

        />

    <ImageView
        android:id="@+id/btnWhatsapp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@+id/btnSkype"
        app:layout_constraintStart_toEndOf="@+id/btnSkype"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_whatsapp_logo"

        />

</androidx.constraintlayout.widget.ConstraintLayout>